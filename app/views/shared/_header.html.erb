<div class='header'>
    <div class='container'>
        <div class='navbar'>
            <i class='icon-github icon-4x pull-left'></i>
            <%= link_to 'Palantir', root_path, class: 'brand' %>
        </div>
    </div>

    <div class='pull-right'>
        <% if user_signed_in? %>
            <%= current_user.username %>
            <%= link_to 'Sign out', :destroy_user_session %>

            <%= link_to_add %>
        <% else %>
            <%= link_to_sign_in %>
        <% end %>
    </div>
</div>
