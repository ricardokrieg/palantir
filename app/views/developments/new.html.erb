<%= simple_form_for @development do |f| %>
    <%= f.fields_for :user do |user_form| %>
        <%= user_form.input :username, label: false, placeholder: 'User', input_html: {class: 'input-xxlarge'} %>
    <% end %>

    <%= f.fields_for :site do |site_form| %>
        <%= site_form.input :name, label: false, placeholder: 'Site', input_html: {class: 'input-xxlarge'} %>
    <% end %>

    Work as:
    <%= f.association :category, as: :select, collection: Category.all, label: false, input_html: {class: 'input-xxlarge'} %>

    <%= f.submit %>
<% end %>
